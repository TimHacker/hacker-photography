<!DOCTYPE html>
<html>
<head>
  <title>Kate Hacker</title>
  <%= stylesheet_link_tag    "Application-Screen" %>
	<!--[if IE]>
	  <%= stylesheet_link_tag    "Application-IE" %>
	<![endif]-->
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" type="image/ico" href="<%= asset_path('favicon.ico')%>">
  <link href='http://fonts.googleapis.com/css?family=Old+Standard+TT:400italic,400' rel='stylesheet' type='text/css'>
  <script src="http://bxslider.com/sites/default/files/jquery.bxSlider.min.js" type="text/javascript"></script>
  <script type="text/javascript">
	$(document).ready(function(){
	  $('#imageSlider').bxSlider({
	  	prevImage: "<%= asset_path('ChevronLeft.png')%>",
		nextImage: "<%= asset_path('ChevronRight.png')%>",
		hideControlOnEnd: true,
		infiniteLoop: false
	  });
	});
  </script>
</head>
<body>

<div class="siteWrapper">
	<%= render 'layouts/header' %>
	<section>
		<%= yield %>
	</section>
	<div class="clear">
	</div>
</div>

</body>
</html>
