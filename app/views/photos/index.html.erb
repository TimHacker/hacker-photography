<h1>Listing photos</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Sort order</th>
    <th>Date</th>
    <th>Url</th>
    <th>Alternate description</th>
    <th>Height</th>
    <th>Width</th>
    <th>Album</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.name %></td>
    <td><%= photo.sort_order %></td>
    <td><%= photo.date %></td>
    <td><%= photo.url %></td>
    <td><%= photo.alternate_description %></td>
    <td><%= photo.height %></td>
    <td><%= photo.width %></td>
    <td><%= photo.album_id %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

